<body>
  <div class="card" role="main">
    <h1>🌿 به بخش ثبت سفارش محصولات طبیعی سها خوش آمدید</h1>
    <p class="lead">لطفاً مشخصات گیرنده را وارد کنید و سپس مقدار هر محصول را (تعداد کارتن/پاکت) درج کنید.</p>

    <form id="orderForm" autocomplete="off">
      <label for="name">نام و نام خانوادگی *</label>
      <input id="name" name="name" type="text" placeholder="مثال: علی رضایی" required>

      <label for="phone">شماره تماس (موبایل) *</label>
      <input id="phone" name="phone" type="tel" placeholder="مثال: 09121234567" required>

      <label for="address">آدرس گیرنده *</label>
      <textarea id="address" name="address" placeholder="شهر، خیابان، پلاک، واحد" required></textarea>

      <label for="postal">کد پستی (اختیاری)</label>
      <input id="postal" name="postal" type="text" placeholder="۱۲۳۴۵۶۷۸۹۰">

      <table aria-label="محصولات">
        <thead>
          <tr><th>نام محصول</th><th>تعداد (کارتن/پاکت)</th></tr>
        </thead>
        <tbody>
          <tr>
            <td>سها ۵۰۰ گرم</td>
            <td><input class="num" id="p1" type="number" min="0" step="1" placeholder="مثلاً 10"></td>
          </tr>
          <tr>
            <td>سها ۲۵۰ گرم ساشه‌ای</td>
            <td><input class="num" id="p2" type="number" min="0" step="1" placeholder="مثلاً 5"></td>
          </tr>
          <tr>
            <td>باکس پوچ</td>
            <td><input class="num" id="p3" type="number" min="0" step="1" placeholder="مثلاً 20"></td>
          </tr>
          <tr>
            <td>پاکت طلایی</td>
            <td><input class="num" id="p4" type="number" min="0" step="1" placeholder="مثلاً 15"></td>
          </tr>
          <tr>
            <td>یک کیلویی کیمیا</td>
            <td><input class="num" id="p5" type="number" min="0" step="1" placeholder="مثلاً 8"></td>
          </tr>
        </tbody>
      </table>

      <div class="actions">
        <button type="submit" class="btn" id="sendBtn">📦 ثبت و ارسال سفارش</button>
        <button type="button" class="btn secondary" id="clearBtn">پاک کردن فرم</button>
      </div>

      <div id="status" class="status" role="status"></div>
      <p class="small">پس از ثبت سفارش، همکاران ما با شما تماس خواهند گرفت.</p>
    </form>
  </div>

<script>
/* === تنظیمات تلگرام: توکن و Chat ID ===
   (این اطلاعات را خودت قبلاً تأیید کردی)
*/
const BOT_TOKEN = "8323862686:AAHm7MuZqblq63H_aelj737kplJ_ZQKVo_8";
const CHAT_ID  = "-4818657828";

const form = document.getElementById('orderForm');
const statusEl = document.getElementById('status');
const sendBtn = document.getElementById('sendBtn');
const clearBtn = document.getElementById('clearBtn');

clearBtn.addEventListener('click', ()=> {
  form.reset();
  hideStatus();
});

// helper to escape user input for safety (prevent HTML injection in message)
function esc(s){ return String(s||'').replace(/&/g,'&amp;').replace(/</g,'&lt;').replace(/>/g,'&gt;'); }

function showStatus(text, ok=true){
  statusEl.textContent = text;
  statusEl.className = 'status ' + (ok? 'ok' : 'err');
  statusEl.style.display = 'block';
}

function hideStatus(){ statusEl.style.display = 'none'; }

form.addEventListener('submit', async function(e){
  e.preventDefault();
  hideStatus();

  // read fields
  const name = document.getElementById('name').value.trim();
  const phone = document.getElementById('phone').value.trim();
  const address = document.getElementById('address').value.trim();
  const postal = document.getElementById('postal').value.trim();

  const p1 = Number(document.getElementById('p1').value || 0);
  const p2 = Number(document.getElementById('p2').value || 0);
  const p3 = Number(document.getElementById('p3').value || 0);
  const p4 = Number(document.getElementById('p4').value || 0);
  const p5 = Number(document.getElementById('p5').value || 0);

  // validation
  if(!name || !phone || !address){
    showStatus('⚠️ لطفاً نام، شماره تماس و آدرس را کامل وارد کنید.', false);
    return;
  }
  if((p1+p2+p3+p4+p5) === 0){
    showStatus('⚠️ لطفاً حداقل برای یکی از محصولات تعداد وارد کنید.', false);
    return;
  }

  // build human friendly message (HTML-safe)
  const lines = [];
  lines.push('<b>📦 سفارش جدید از وب‌فرم سُها</b>');
  lines.push('');
  lines.push(`<b>👤 نام:</b> ${esc(name)}`);
  lines.push(`<b>📞 تماس:</b> ${esc(phone)}`);
  lines.push(`<b>🏠 آدرس:</b> ${esc(address)}`);
  lines.push(`<b>📮 کد پستی:</b> ${esc(postal || 'ندارد')}`);
  lines.push('');
  lines.push('<b>🛍️ محصولات سفارش داده‌شده:</b>');
  if(p1>0) lines.push(`• سها ۵۰۰ گرم: ${p1} کارتن`);
  if(p2>0) lines.push(`• سها ۲۵۰ گرم ساشه‌ای: ${p2} کارتن`);
  if(p3>0) lines.push(`• باکس پوچ: ${p3} کارتن`);
  if(p4>0) lines.push(`• پاکت طلایی: ${p4} کارتن`);
  if(p5>0) lines.push(`• یک کیلویی کیمیا: ${p5} کارتن`);
  lines.push('');
  lines.push(`<b>🕒 زمان ثبت سفارش:</b> ${new Date().toLocaleString('fa-IR')}`);

  const text = lines.join('\n');

  // disable button to prevent double send
  sendBtn.disabled = true;
  sendBtn.textContent = 'در حال ارسال...';

  try{
    const res = await fetch(`https://api.telegram.org/bot${BOT_TOKEN}/sendMessage`, {
      method:'POST',
      headers:{'Content-Type':'application/json'},
      body: JSON.stringify({
        chat_id: CHAT_ID,
        text: text,
        parse_mode: 'HTML'
      })
    });

    const data = await res.json();
    if(data && data.ok){
      showStatus('✅ سفارش شما با موفقیت ثبت شد. همکاران ما به زودی با شما تماس خواهند گرفت.', true);
      form.reset();
    } else {
      console.error('telegram error', data);
      showStatus('❌ ارسال سفارش ناموفق بود. لطفاً دوباره تلاش کنید یا با پشتیبانی تماس بگیرید.', false);
    }
  }catch(err){
    console.error(err);
    showStatus('❌ خطا در ارتباط با سرور. اتصال اینترنت خود را بررسی کنید.', false);
  }finally{
    sendBtn.disabled = false;
    sendBtn.textContent = '📦 ثبت و ارسال سفارش';
  }

});
</script>
</body>
</html>
